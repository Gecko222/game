{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "keyword-spacing": [
            "warn",
            {
                "after": true
            }
        ],
        "space-before-blocks": [
            "warn",
            "always"
        ],
        "dot-location": [
            "error",
            "property"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "block-spacing": [
            "warn",
            "always"
        ], 
        "array-bracket-spacing": [
            "warn",
            "never"
        ], 
        "newline-after-var": [
            "error",
            "always"
        ], 
        "brace-style": [
            "warn",
            "1tbs"
        ], 
        "comma-spacing": [
            "warn",
            {
                "before": false,
                "after": true
            }
        ],
        "key-spacing": [
            "error",
            {
                "beforeColon": false
            }
        ],
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 2,
                "maxEOF": 1,
                "maxBOF": 0 
            }
        ],
        "no-whitespace-before-property": "warn",
        "object-property-newline": "error",
        "react/jsx-indent": [
            "error",
            "tab"
        ],
        "no-case-declarations": 0,
        "react/jsx-indent-props": [
            "error",
            "tab"
        ]
    }
}
